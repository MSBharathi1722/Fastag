<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <servlet>
   <servlet-name>LoginServlet</servlet-name>
   <servlet-class>Login</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
   <servlet-name>GetDetailsServlet</servlet-name>
   <servlet-class>Details</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>GetDetailsServlet</servlet-name>
    <url-pattern>/getDetails/*</url-pattern>
  </servlet-mapping>

  <servlet>
   <servlet-name>ReturnDetails</servlet-name>
   <servlet-class>Return</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ReturnDetails</servlet-name>
    <url-pattern>/returns</url-pattern>
  </servlet-mapping>

  <servlet>
   <servlet-name>SignUpDetails</servlet-name>
   <servlet-class>Signup</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SignUpDetails</servlet-name>
    <url-pattern>/newRecords</url-pattern>
  </servlet-mapping>

  <servlet>
   <servlet-name>VerifyUser</servlet-name>
   <servlet-class>CheckUser</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>VerifyUser</servlet-name>
    <url-pattern>/userExist</url-pattern>
  </servlet-mapping>

  <servlet>
   <servlet-name>VerifyPin</servlet-name>
   <servlet-class>CheckPin</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>VerifyPin</servlet-name>
    <url-pattern>/checkpins</url-pattern>
  </servlet-mapping>

  <servlet>
   <servlet-name>updateBalance</servlet-name>
   <servlet-class>UpdateDetail</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>updateBalance</servlet-name>
    <url-pattern>/updates</url-pattern>
  </servlet-mapping>

</web-app>
