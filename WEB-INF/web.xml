<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <servlet>
   <servlet-name>LoginServlet</servlet-name>
   <servlet-class>Login</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
   <servlet-name>VerifyUser</servlet-name>
   <servlet-class>CheckUser</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>VerifyUser</servlet-name>
    <url-pattern>/userExist</url-pattern>
  </servlet-mapping>

  <servlet>
   <servlet-name>UserDetail</servlet-name>
   <servlet-class>UserDetail</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UserDetail</servlet-name>
    <url-pattern>/userDetails</url-pattern>
  </servlet-mapping>

  <servlet>
   <servlet-name>TravelDetail</servlet-name>
   <servlet-class>TravelDetail</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>TravelDetail</servlet-name>
    <url-pattern>/travelDetails</url-pattern>
  </servlet-mapping>

</web-app>

