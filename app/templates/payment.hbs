<div class="box1">
  <div class="box2">
    {{#unless this.valid}}
          <form>
            <label>Amount:</label>
        <Input
              class="input"
              aria-label="Amount"
              @type="text"
              placeholder="min 300"
              @value={{this.amt}}
        /><br>
        <label>Card Number:</label>
        <Input
              class="input"
              aria-label="Card Number"
              @type="text"
              placeholder="Card Number"
              @value={{this.cardNo}}
        /><br>
      <label>Expiry:</label>
        <Input
            class="input"
            aria-label="Expiry Date"
            @type="text"
            placeholder="MM/YY"
            @value={{this.expDate}}
        /><br>
        <label>CVV:</label>
        <Input
            class="input"
            aria-label="cvv"
            @type="text"
            placeholder="***"
            @value={{this.cvv}}
        /><br>
        <label>Passcode:</label>
        <Input
            class="input"
            aria-label="Passcode"
            @type="text"
            placeholder="pin"
            @value={{this.pin}}
        />
            {{!-- template-lint-disable no-action --}}
            <button id="button" type="button" {{action this.validate}}>Pay</button>
      </form>
    {{/unless}}
    {{#if this.success}}
      <div class="body">
        <div class="card">
            {{!-- template-lint-disable no-inline-styles --}}
            <div style="border-radius:200px; height:200px; width:200px; background: #F8FAF5; margin:0 auto;">
              <i class="checkmark">âœ“</i>
            </div>
              <h1 id="h1">Success</h1>
              <p id="p">Payment Successful;<br/> <LinkTo @route="home">Go to home?</LinkTo></p>
        </div>
      </div>
    {{/if}}
  </div>
  <div class="box3"></div>
</div>
{{outlet}}
