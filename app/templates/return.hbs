<div class="body">
          <div class="card">
              {{!-- template-lint-disable no-inline-styles --}}
              <div style="border-radius:200px; height:200px; width:200px; background: #F8FAF5; margin:0 auto;">
                <i class="checkmark">âœ“</i>
              </div>
                <h1 id="h1">Success</h1>

                {{!-- template-lint-disable no-action --}}
                <p id="p">Free Return Available<br/> Place : {{this.place}} Toll Plaza<br>THANK YOU<br><button type="button" {{action this.reload}} ><LinkTo @route="home">Go to home?</LinkTo></button><br> </p>
          </div>
        </div>
{{/if}}
