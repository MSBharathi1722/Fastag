{{#unless this.content}}
  <div class="returnBox1">
    <h2>Check For a valid Return</h2>
    <form>
      <label>Toll place:</label><br>
      <Input
          class="input"
          aria-label="Toll Place"
          @type="text"
          placeholder=""
          @value={{this.place}}
      /><br><br>
        {{!-- template-lint-disable no-action --}}
      <button id="bt" type="button" {{action this.validate}}>Proceed</button>
      <p>You can avail your free return if you have crossed this poll within 30 minutes<br>Else do a fresh payment for toll</p>
    </form>
  </div>

{{/unless}}
